@using System.Web.UI.WebControls
@model IEnumerable<FootballLeague.Models.Player>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
    <div id="sort_container" class="container col-lg-12">
        <div id="div_sortBy">
            <label id="lbl_sortBy">Sort by:</label>
                <form asp-controller="UserPlayer" asp-action="Index" method="post" name="formSort" id="formSort">
                    <select name="dropSort" id="drop_sortBy">
                        <option value="" disabled selected>-- Choose one --</option>
                        <option value="name">Full Name</option>
                        <option value="age">Age</option>
                        <option value="club">Club</option>
                        <option value="nationality">Nationality</option>
                        <option value="goals">Goals Overall</option>
                    </select>
                </form>
        </div>

        <div id="div_searchBy">
            <label id="lbl_searchBy">Search by:</label>
            <form  action="/UserPlayer/SearchPlayer" method="post" name="formSearch" id="formSearch">
                <div id="div_searchBySelection">
                    <select name="dropSearch" id="drop_searchBy">
                        <option value="" disabled selected>-- Choose one --</option>
                        <option value="name">Full Name</option>
                        <option value="club">Club</option>
                        <option value="nationality">Nationality</option>
                    </select>
                </div>

                <div id="div_searchbar">
                    <input name="inputSearch" id="inputSearchBy" type="text" placeholder="Search.." />
                </div>
            </form>
        </div>
    </div>


<table class="table">
    <tr>
        <th>
            Full Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.League)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Season)
        </th>
        <th>
            Current Club
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.League)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentClub)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {id = item.Id})
            </td>
        </tr>
    }

</table>