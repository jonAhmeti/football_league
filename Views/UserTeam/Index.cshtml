@model IEnumerable<FootballLeague.Models.Team>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div id="sort_container" class="container col-lg-12">
    <div id="div_sortBy">
        <label id="lbl_sortBy">Sort by:</label>
        <form asp-controller="UserTeam" asp-action="Index" method="post" name="formSort" id="formSort">
            <select name="dropSort" id="drop_sortBy">
                <option value="" disabled selected>-- Choose one --</option>
                <option value="cards">Total Cards Earned</option>
                <option value="country">Country</option>
                <option value="fouls">Fouls</option>
                <option value="goals">Goals</option>
                <option value="leaguePos">League Position</option>
                <option value="losses">Losses</option>
                <option value="wins">Wins</option>
            </select>
        </form>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommonName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Season)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Season)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=item.Id })
            </td>
        </tr>
    }

</table>